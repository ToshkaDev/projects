{
  "name": "mist-api",
  "version": "3.0.1",
  "description": "RESTful API to the MiST database",
  "main": "index.js",
  "engines": {
    "node": "6.4"
  },
  "scripts": {
    "preinstall": "node ../bin/merge-deps.js -i ../core-lib/package.json ../seqdepot-lib/src/models/package.json ../mist-lib/package.json ./package.json",
    "eslint": "node_modules/.bin/eslint --ignore-pattern src/node_modules 'src/**/*.js'",
    "coverage": "NODE_PATH=node_modules node_modules/.bin/istanbul cover --config ../_common/.istanbul.js node_modules/mocha/bin/_mocha -- -r ../_common/test.globals.js $(find src -name '*.tests.js')",
    "test": "find src -name '*.tests.js' | NODE_PATH=node_modules xargs node_modules/.bin/mocha -r ../_common/test.globals.js",
    "debug": "NODE_PATH=node_modules node --debug src/app.js | node_modules/.bin/bunyan",
    "start": "NODE_PATH=node_modules node src/start-api.js | node_modules/.bin/bunyan",
    "stop": "node_modules/.bin/pm2 stop mist-api",
    "monitor": "node_modules/.bin/pm2 monit mist-api",
    "logs": "node_modules/.bin/pm2 logs --raw mist-api | node_modules/.bin/bunyan",
    "docker-build": "docker build -t biowonks/mist-api .",
    "on-docker": "docker run --rm biowonks/mist-api"
  },
  "pre-commit": [
    "eslint"
  ],
  "author": "BioWonks",
  "contributors": [
    {
      "name": "Luke Ulrich"
    },
    {
      "name": "Ogun Adebali"
    },
    {
      "name": "Davi Ortega"
    },
    {
      "name": "Amit Upadhyay"
    }
  ],
  "license": "",
  "dependencies": {
    "bluebird": "^3.4.5",
    "body-parser": "1.x",
    "bunyan": "^1.8.1",
    "commander": "^2.9.0",
    "compression": "1.6.x",
    "corser": "2.x",
    "duplex-child-process": "0.0.5",
    "express": "4.x",
    "helmet": "^2.1.2",
    "http-shutdown": "1.x",
    "inflection": "^1.10.0",
    "lodash": "^4.15.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.14.1",
    "mv": "^2.1.1",
    "node-config-loader": "https://github.com/lukeulrich/node-config-loader.git",
    "path-routify": "https://github.com/lukeulrich/path-routify.git",
    "pg": "^6.1.0",
    "pm2": "^1.1.3",
    "public-ip": "^2.0.1",
    "pumpify": "^1.3.5",
    "request": "^2.74.0",
    "request-promise": "^4.1.1",
    "response-time": "^2.3.1",
    "sequelize": "^3.24.1",
    "sequelize-migrator": "https://github.com/lukeulrich/sequelize-migrator.git",
    "split": "^1.0.0",
    "through2": "^2.0.1",
    "universal-analytics": "^0.4.2",
    "xml2js": "^0.4.17",
    "sequelize-model-loader": "https://github.com/lukeulrich/sequelize-model-loader.git"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.4.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "nock": "^8.0.0",
    "pre-commit": "^1.1.3",
    "sinon": "^1.17.5",
    "supertest": "^2.0.0",
    "supertest-as-promised": "2.x",
    "temp": "^0.8.3"
  }
}

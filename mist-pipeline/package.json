{
  "name": "mist-pipeline",
  "version": "3.0.1",
  "description": "Computational pipeline for populating the MiST database",
  "engines": {
    "node": "6.4"
  },
  "scripts": {
    "preinstall": "node ../_common/merge-deps.js -i ../mist-lib/package.json ./package.json",
    "postinstall": "node ../_common/create-symlink.js ../mist-lib && node ../_common/create-symlink.js ../_common/.eslintrc.js",
    "test": "NODE_PATH=node_modules node_modules/.bin/mocha -r ../_common/test.globals.js './{,!(mist-lib)}/**/*.tests.js'",
    "coverage": "NODE_PATH=node_modules node_modules/.bin/istanbul cover --dir testing/coverage node_modules/mocha/bin/_mocha -- -r ../_common/test.globals.js './{,!(node_modules|mist-lib)}/**/*.tests.js'",
    "eslint": "node_modules/.bin/eslint --ignore-path node_modules --ignore-path mist-lib --ignore-path vendor '**/*.js'",
    "install-coils": "vendor/install-coils.sh",
    "install-seg": "vendor/install-seg.sh",
    "install-hmmer3": "vendor/install-hmmer3.sh $(scripts/get-config.js vendor.hmmer3.version vendor.hmmer3.basePath)",
    "install-pfam": "npm run install-hmmer3 && vendor/install-pfam.sh $(scripts/get-config.js vendor.pfam.version vendor.pfam.basePath vendor.hmmer3.binPath)",
    "undo-migration": "node db/undo-migration.js | node_modules/.bin/bunyan",
    "debug": "node --debug app.js | node_modules/.bin/bunyan",
    "start": "node index.js | node_modules/.bin/bunyan",
    "stop": "node_modules/.bin/pm2 stop mist-api",
    "monitor": "node_modules/.bin/pm2 monit mist-api",
    "logs": "node_modules/.bin/pm2 logs --raw mist-api | node_modules/.bin/bunyan"
  },
  "pre-commit": [
    "eslint"
  ],
  "author": "BioWonks",
  "contributors": [
    {
      "name": "Luke Ulrich"
    },
    {
      "name": "Ogun Adebali"
    },
    {
      "name": "Davi Ortega"
    },
    {
      "name": "Amit Upadhyay"
    }
  ],
  "license": "",
  "dependencies": {
    "bunyan": "^1.8.1",
    "bluebird": "^3.4.5",
    "body-parser": "1.x",
    "byline": "4.2.x",
    "commander": "^2.9.0",
    "compression": "1.6.x",
    "corser": "2.x",
    "debug": "2.x",
    "domain": "0.0.1",
    "duplex-child-process": "0.0.5",
    "express": "4.x",
    "helmet": "^2.1.2",
    "http-shutdown": "1.x",
    "inflection": "^1.10.0",
    "lodash": "^4.15.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.14.1",
    "mv": "^2.1.1",
    "path-routify": "git://github.com/lukeulrich/path-routify.git",
    "pm2": "^1.1.3",
    "pg": "^6.1.0",
    "pg-hstore": "2.x",
    "public-ip": "^2.0.1",
    "pump": "1.x",
    "pumpify": "^1.3.5",
    "request-promise": "^4.1.1",
    "sequelize": "^3.24.1",
    "sequelize-migrator": "git://github.com/lukeulrich/sequelize-migrator.git",
    "split": "^1.0.0",
    "stream-each": "1.x",
    "through2": "^2.0.1",
    "universal-analytics": "^0.4.2",
    "xml2js": "^0.4.17",
    "request": "^2.74.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "csv-parse": "^1.0.1",
    "eslint": "^3.4.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "nock": "^8.0.0",
    "pre-commit": "^1.1.3",
    "sinon": "^1.17.5",
    "supertest": "1.x",
    "supertest-as-promised": "2.x",
    "temp": "^0.8.3"
  }
}

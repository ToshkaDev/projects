{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch API",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/index.js",
			"stopOnEntry": false,
			"cwd": "${workspaceRoot}",
			"preLaunchTask": null,
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy"
			],
			"env": {
				"NODE_ENV": "develop"
			},
			"externalConsole": false,
			"sourceMaps": false,
			"outDir": null
		},
		{
			"name": "Pipeline",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/pipeline/index.js",
			"stopOnEntry": false,
			"cwd": "${workspaceRoot}/pipeline",
			"args": [
				// "-g",
				// "1",
				"Taxonomy"
			],
			"preLaunchTask": null,
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy"
			],
			"env": {
				"NODE_ENV": "develop"
			},
			"externalConsole": false,
			"sourceMaps": false,
			"outDir": null
		},
		{
			"name": "Undo migration",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/db/undo-migration.js",
			"stopOnEntry": false,
			"cwd": "${workspaceRoot}/pipeline",
			"args": [
				"-y"
			],
			"preLaunchTask": null,
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy"
			],
			"env": {
				"NODE_ENV": "develop"
			},
			"externalConsole": false,
			"sourceMaps": false,
			"outDir": null
		},
		{
			"name": "Unit tests (local)",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/.bin/_mocha",
			"stopOnEntry": false,
			"cwd": "${workspaceRoot}",
			"args": [
				"--no-timeouts",
				"--require", "testing/setup.js",
				"pipeline/**/*.tests.js",
				"services/**/*.tests.js",
				"models/**/*.tests.js"
			],
			"runtimeExecutable": null
		},
		{
			"name": "Unit tests (docker)",
			"type": "node",
			"request": "attach",
			"port": 5858,
			"preLaunchTask": "runMochaInDocker",
			"address": "localhost",
			"restart": false,
			"sourceMaps": false,
			"outDir": null,
			"localRoot": "${workspaceRoot}/",
			"remoteRoot": "/home/mist/api"
		}
	]
}
